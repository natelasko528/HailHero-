# Production Environment Variables
# Copy this file to .env.production and fill in your actual values

# Flask Configuration
FLASK_ENV=production
FLASK_APP=/app/src/mvp/app.py
PYTHONPATH=/app
SECRET_KEY=your-secret-key-here

# Database Configuration
DATABASE_URL=postgresql://hailhero:${POSTGRES_PASSWORD}@postgres:5432/hailhero
POSTGRES_DB=hailhero
POSTGRES_USER=hailhero
POSTGRES_PASSWORD=your-secure-postgres-password

# Redis Configuration
REDIS_URL=redis://redis:6379/0

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=json

# Twilio Configuration
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=+1234567890

# NOAA API Configuration
NOAA_API_KEY=your-noaa-api-key

# Application Configuration
APP_NAME=HailHero MVP
APP_VERSION=1.0.0
APP_DEBUG=false

# Security Configuration
SECURITY_PASSWORD_SALT=your-security-salt
JWT_SECRET_KEY=your-jwt-secret-key

# CORS Configuration
CORS_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# Rate Limiting
RATE_LIMIT_STORAGE_URI=redis://redis:6379/1
RATE_LIMIT_DEFAULT=100/hour

# File Upload Configuration
MAX_CONTENT_LENGTH=16777216  # 16MB
UPLOAD_FOLDER=/app/uploads
ALLOWED_EXTENSIONS=jpg,jpeg,png,gif,pdf

# Email Configuration (if needed)
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password

# Monitoring and Analytics
ENABLE_METRICS=true
METRICS_PORT=8080
SENTRY_DSN=your-sentry-dsn

# Health Check Configuration
HEALTH_CHECK_ENABLED=true
HEALTH_CHECK_INTERVAL=30